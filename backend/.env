# Environment
NODE_ENV=development
PORT=5000
HOST=localhost
BASE_URL=http://localhost:5000

# MongoDB
MONGODB_URI=mongodb://localhost:27017/pharmacy-delivery

# JWT
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure_123
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# File Upload
UPLOAD_PATH=uploads

# Geocoding
GEOCODER_PROVIDER=google
GEOCODER_API_KEY=your_google_maps_api_key_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@pharmacy-delivery.com

# SMS
SMS_PROVIDER=twilio
SMS_API_KEY=your_twilio_api_key
SMS_FROM=PHARMACY

# Push Notifications
FCM_SERVER_KEY=your_firebase_cloud_messaging_server_key

# Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
STRIPE_SECRET_KEY=your_stripe_secret_key
PAYTM_MERCHANT_ID=your_paytm_merchant_id
PAYTM_MERCHANT_KEY=your_paytm_merchant_key

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
CORS_ORIGIN=http://localhost:3000

# Cache
CACHE_TTL=3600000
CACHE_CHECK_PERIOD=3600000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Maintenance
MAINTENANCE_MODE=false

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_PAYMENT_GATEWAY=true
ENABLE_GEOCODING=true

# API Versions
API_VERSION=v1

# Debug
DEBUG=app:*